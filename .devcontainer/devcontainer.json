{
  "name": "Monorepo",
  "dockerFile": "Dockerfile",
  "settings": {
    "workbench.iconTheme": "material-icon-theme",
    "terminal.integrated.shell.linux": "/bin/zsh",
    "terminal.explorerKind": "external",
    "bazel.buildifierPath": "/go/bin/buildifier",
    "bazel.buildifierExecutable": "/go/bin/buildifier",
    "bazel.executable": "/usr/local/bin/bazel",
    "bazel.buildifierFixOnFormat": true,
    "remote.containers.workspaceMountConsistency": "delegated",
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    "git.fetchOnPull": false,
    "git.confirmSync": false,
    "editor.minimap.enabled": false,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": { "source.fixAll.eslint": true },
    "eslint.format.enable": true,
    "eslint.packageManager": "yarn",
    "eslint.validate": ["javascript", "typescript"],
    "prettier.packageManager": "yarn",
    "prettier.requireConfig": true,
    "javascript.format.enable": true,
    "typescript.format.enable": true,
    "[typescript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "python.pythonPath": "/root/.pyenv/shims/python",
    "python.formatting.provider": "autopep8",
    "python.formatting.autopep8Path": "/root/.pyenv/shims/autopep8",
    "python.linting.lintOnSave": true,
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.pylintPath": "/root/.pyenv/shims/pylint"
  },
  "appPort": ["8080:8080", "35729:35729"],
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker-host.sock,type=bind",
    //"source=${env:HOME}${env:USERPROFILE}/.kube,target=/usr/local/share/kube-localhost,type=bind",
    "source=monorepo-node_modules,target=${containerWorkspaceFolder}/node_modules,type=volume",
    "source=monorepo-zsh_history,target=/zsh_history,type=volume"
  ],
  "extensions": [
    "aaron-bond.better-comments",
    "angular.ng-template",
    "bazelbuild.vscode-bazel",
    "bierner.github-markdown-preview",
    "codezombiech.gitignore",
    "davidanson.vscode-markdownlint",
    "dbaeumer.vscode-eslint",
    "folke.vscode-monorepo-workspace",
    "ms-azuretools.vscode-docker",
    "ms-kubernetes-tools.vscode-kubernetes-tools",
    "pkief.material-icon-theme",
    "yzhang.markdown-all-in-one",
    "eg2.vscode-npm-script",
    "esbenp.prettier-vscode",
    "gamunu.vscode-yarn",
    "unional.vscode-sort-package-json",
    "rvest.vs-code-prettier-eslint",
    "eamodio.gitlens",
    "christian-kohler.npm-intellisense",
    "editorconfig.editorconfig",
    "dkneeland.yarn-task-provider",
    "github.vscode-pull-request-github",
    "rafaelmaiolla.diff",
    "hashicorp.terraform",
    "ms-python.python"
  ]
}
